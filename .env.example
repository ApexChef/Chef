# Chef Environment Configuration
# Copy this file to .env and customize for your environment

# ==============================================================================
# LLM Configuration
# ==============================================================================

# LLM Provider (anthropic or ollama)
# Auto-detects based on API keys if not specified
LLM_PROVIDER=ollama

# LLM Model (provider-specific)
# Anthropic: claude-3-opus-20240229, claude-3-sonnet-20240229, claude-3-haiku-20240307
# Ollama: llama2, mistral, codellama, etc.
LLM_MODEL=

# Anthropic API Key (required if using Anthropic provider)
ANTHROPIC_API_KEY=

# Ollama Base URL (default: http://localhost:11434)
OLLAMA_BASE_URL=http://localhost:11434

# ==============================================================================
# Logging Configuration
# ==============================================================================

# Global log level (trace, debug, info, warn, error, fatal)
# Default: info (production), debug (development)
LOG_LEVEL=info

# Enable file logging (true or false)
# Default: false
LOG_TO_FILE=false

# Log file path (when LOG_TO_FILE=true)
# Default: ./logs/chef.log
LOG_FILE_PATH=./logs/chef.log

# Log rotation frequency (daily, hourly, 1w, 1M)
# Default: daily
LOG_ROTATION_FREQUENCY=daily

# Maximum log file size before rotation (e.g., 50m, 100m, 1g)
# Default: 50m
LOG_ROTATION_SIZE=50m

# Number of days to retain log files
# Default: 14
LOG_RETENTION_DAYS=14

# ==============================================================================
# Environment
# ==============================================================================

# Node environment (development, production, test)
NODE_ENV=development
